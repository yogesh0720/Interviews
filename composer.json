{
  "name": "v-nshantibhai/interviews",
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "authors": [
    {
      "name": "v-nshantibhai",
      "email": "v-nshantibhai@shutterfly.com"
    }
  ],
  "require-dev": {
    "phpstan/phpstan": "^2.1",
    "squizlabs/php_codesniffer": "^4.0"
  },
  "scripts": {
    "phpcs": "./vendor/bin/phpcs --standard=PSR4 src/",
    "phpcbf": "./vendor/bin/phpcbf --standard=PSR4 src/",
    "phpstan": "./vendor/bin/phpstan analyse --level 5 src/",
    "lint-fix": [
      "@phpcbf"
    ],
    "test:quality": [
      "@phpcs",
      "@phpstan"
    ]
  }
}
